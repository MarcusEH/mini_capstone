<h1>All Products</h1>

<% @products.each do |product| %>
  <h3>Name: <%= product.name %></h3>
  <p>Description: <%= product.description %></p>
  <p>Price: <%= number_to_currency(product.price) %></p>
  <p>Images:</p>
  <p><% product.images.each do |image| %>
        <img src="<%= image.url %>">
     <% end %>
<% end %>